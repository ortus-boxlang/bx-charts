<!--- Combined Styles for Test Pages --->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/SyntaxHighlighter/3.0.83/styles/shCore.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/SyntaxHighlighter/3.0.83/styles/shThemeDefault.min.css">
<style>
    /* Global Reset */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    /* Base Layout Styles */
    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        margin: 0;
        padding: 20px;
        background: ##f5f7fa;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Header Styles */
    .header {
        background: linear-gradient(135deg, ##667eea 0%, ##764ba2 100%);
        padding: 40px 20px;
        margin: -20px -20px 30px -20px;
        text-align: center;
        color: white;
    }
    .header h1 {
        margin: 0 0 10px 0;
        font-size: 2.5em;
        color: white;
    }
    .header p {
        margin: 0;
        opacity: 0.9;
        font-size: 1.1em;
    }

    /* Chart Section Styles */
    .chart-section {
        background: white;
        margin: 30px auto;
        padding: 30px;
        max-width: 900px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    .chart-container {
        background: white;
        margin: 30px auto;
        border-radius: 12px;
        padding: 30px;
        max-width: 800px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    .chart-title {
        font-size: 1.5em;
        font-weight: bold;
        margin-bottom: 15px;
        color: ##667eea;
        border-bottom: 3px solid ##667eea;
        padding-bottom: 10px;
    }
    .chart-description {
        font-size: 14px;
        color: ##666;
        margin-bottom: 15px;
    }

    /* Heading Styles */
    h2 {
        color: ##667eea;
        border-bottom: 3px solid ##667eea;
        padding-bottom: 10px;
        margin-top: 0;
    }

    /* Info Box Styles */
    .chart-info {
        background: ##f8f9fa;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        border-left: 4px solid ##667eea;
    }
    .chart-info strong {
        color: ##667eea;
    }
    .feature-highlight {
        background: ##e8f4f8;
        padding: 10px;
        border-left: 4px solid ##3498db;
        margin: 10px 0;
    }

    /* Responsive Container Styles */
    .responsive-container {
        width: 100%;
        max-width: 800px;
        padding: 10px;
        background: ##f9f9f9;
        border: 2px dashed ##ddd;
    }

    /* Link Styles */
    .back-link {
        display: inline-block;
        background: ##667eea;
        padding: 12px 24px;
        text-decoration: none;
        border-radius: 25px;
        color: white;
        font-weight: 500;
        transition: all 0.3s ease;
        box-shadow: 0 2px 4px rgba(102, 126, 234, 0.3);
    }
    .back-link:hover {
        background: ##5568d3;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(102, 126, 234, 0.4);
    }

    /* Code Container Styles */
    .code-container {
        margin-top: 20px;
        background: ##f8f9fa;
        border-radius: 8px;
        padding: 15px;
        border: 1px solid ##e0e0e0;
    }
    .code-title {
        font-weight: bold;
        margin-bottom: 10px;
        color: ##667eea;
        font-size: 14px;
    }
    .syntaxhighlighter {
        margin: 0 !important;
        border-radius: 4px !important;
        overflow: hidden !important;
    }

    /* Utility Classes */
    .text-note {
        margin-top: 10px;
        color: ##666;
        font-size: 14px;
    }
    .divider {
        margin: 40px 0;
        border: none;
        border-top: 1px solid ##e0e0e0;
    }
    .flex-container {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
    }
    .flex-item {
        flex: 1;
        min-width: 300px;
    }
    .height-400 {
        height: 400px;
    }
    .warning-highlight {
        background: ##fff3cd;
        border-left-color: ##ffc107;
        padding: 10px;
        margin-top: 10px;
        border-left: 4px solid ##ffc107;
    }
</style>
