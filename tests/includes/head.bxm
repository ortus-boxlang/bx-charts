<!--- Bootstrap 5 and Modern Styles for BoxLang Charts Test Pages --->
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/SyntaxHighlighter/3.0.83/styles/shCore.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/SyntaxHighlighter/3.0.83/styles/shThemeDefault.min.css">
<style>
    :root {
        --boxlang-primary: ##7c3aed;
        --boxlang-secondary: ##a78bfa;
        --boxlang-accent: ##c084fc;
        --boxlang-dark: ##1e1b4b;
        --boxlang-light: ##f5f3ff;
    }

    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background: ##f8f9fa;
        min-height: 100vh;
        color: ##212529;
    }

    /* Navbar Styles */
    .navbar-boxlang {
        background: linear-gradient(135deg, var(--boxlang-primary) 0%, var(--boxlang-secondary) 100%);
        box-shadow: 0 4px 12px rgba(124, 58, 237, 0.15);
    }
    .navbar-brand {
        font-weight: 700;
        font-size: 1.5rem;
        display: flex;
        align-items: center;
        gap: 12px;
    }
    .navbar-brand img {
        height: 40px;
        width: auto;
    }

    /* Hero Header */
    .hero-header {
        background: linear-gradient(135deg, var(--boxlang-primary) 0%, var(--boxlang-secondary) 100%) !important;
        padding: 60px 0;
        margin-bottom: 40px;
        box-shadow: 0 8px 24px rgba(124, 58, 237, 0.2);
    }
    .hero-header h1,
    .hero-header h2,
    .hero-header h3,
    .hero-header h4,
    .hero-header h5,
    .hero-header h6 {
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
    }
    .hero-header p,
    .hero-header .lead,
    .hero-header .display-3,
    .hero-header h1 {
        font-size: 3rem;
        font-weight: 800;
        margin-bottom: 15px;
    }
    .hero-header .lead {
        font-size: 1.25rem;
        opacity: 0.95;
    }
    .hero-header .btn-light {
        color: var(--boxlang-primary) !important;
        background-color: white !important;
        border-color: white !important;
    }
    .hero-header .btn-light:hover {
        color: var(--boxlang-primary) !important;
        background-color: ##f8f9fa !important;
    }
    .hero-header .btn-outline-light {
        border-color: white !important;
        background-color: transparent !important;
    }
    .hero-header .btn-outline-light:hover {
        background-color: white !important;
        color: var(--boxlang-primary) !important;
    }
    .hero-header .alert-light {
        background-color: rgba(255, 255, 255, 0.15) !important;
        border: 1px solid rgba(255, 255, 255, 0.3) !important;
    }

    /* Chart Cards */
    .chart-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.08);
        margin-bottom: 30px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .chart-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(124, 58, 237, 0.15);
    }
    .chart-card-header {
        background: linear-gradient(135deg, var(--boxlang-light) 0%, white 100%);
        padding: 24px;
        border-bottom: 3px solid var(--boxlang-primary);
    }
    .chart-card-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--boxlang-dark);
        margin: 0;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    .chart-card-body {
        padding: 30px;
    }

    /* Info Badges */
    .info-badge {
        display: inline-block;
        padding: 8px 16px;
        background: var(--boxlang-light);
        border-left: 4px solid var(--boxlang-primary);
        border-radius: 8px;
        margin: 15px 0;
        font-size: 0.95rem;
    }
    .info-badge strong {
        color: var(--boxlang-primary);
    }

    /* Code Display */
    .code-display {
        background: ##1e1e1e;
        border-radius: 12px;
        padding: 20px;
        margin-top: 20px;
        position: relative;
        box-shadow: inset 0 2px 8px rgba(0,0,0,0.3);
    }
    .code-display-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
        padding-bottom: 10px;
        border-bottom: 1px solid ##333;
    }
    .code-display-title {
        color: ##a78bfa;
        font-weight: 600;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    .syntaxhighlighter {
        border-radius: 8px !important;
        box-shadow: none !important;
        margin: 0 !important;
    }

    /* Buttons */
    .btn-boxlang {
        background: linear-gradient(135deg, var(--boxlang-primary) 0%, var(--boxlang-secondary) 100%);
        border: none;
        font-weight: 600;
        padding: 12px 28px;
        border-radius: 50px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(124, 58, 237, 0.3);
    }
    .btn-boxlang:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(124, 58, 237, 0.4);
    }

    /* Responsive Chart Container */
    .chart-display {
        padding: 20px;
        background: ##fafafa;
        border-radius: 12px;
        margin: 20px 0;
    }

    /* Feature Highlights */
    .feature-box {
        background: white;
        border: 2px solid ##e0e7ff;
        border-left: 4px solid var(--boxlang-primary);
        padding: 24px;
        border-radius: 8px;
        margin: 20px 0;
        transition: all 0.3s ease;
    }
    .feature-box:hover {
        border-color: var(--boxlang-primary);
        box-shadow: 0 4px 12px rgba(124, 58, 237, 0.1);
    }
    .feature-box h5 {
        color: var(--boxlang-dark);
        font-weight: 700;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    .feature-box h5 i {
        color: var(--boxlang-primary);
    }
    .feature-box ul li {
        color: ##495057;
        margin-bottom: 8px;
    }

    /* Stats Cards */
    .stat-card {
        background: white;
        padding: 30px 20px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        text-align: center;
        transition: all 0.3s ease;
    }
    .stat-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 4px 16px rgba(0,0,0,0.12);
    }
    .stat-card i {
        display: block;
        margin-bottom: 15px;
    }
    .stat-number {
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--boxlang-primary);
        display: block;
        margin: 10px 0;
    }
    .stat-label {
        color: ##666;
        font-size: 1rem;
        font-weight: 500;
        display: block;
        margin-top: 8px;
    }

    /* Footer */
    .footer {
        background: var(--boxlang-dark) !important;
        padding: 40px 0;
        margin-top: 60px;
    }
    .footer h5,
    .footer h6,
    .footer p,
    .footer a,
    .footer a:hover {
        color: var(--boxlang-secondary) !important;
    }

    /* Animations */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    .animate-fade-in {
        animation: fadeInUp 0.6s ease-out;
    }

    /* Test Suite Cards */
    .test-suite-card {
        background: white;
        border-radius: 16px;
        padding: 30px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        height: 100%;
        border: 2px solid transparent;
    }
    .test-suite-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(124, 58, 237, 0.15);
        border-color: var(--boxlang-primary);
        text-decoration: none;
    }
    .test-suite-card h3 {
        color: var(--boxlang-dark);
        font-weight: 700;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    .test-suite-card p {
        color: ##666;
        margin-bottom: 20px;
    }
    .test-suite-card .badge {
        margin: 3px;
        padding: 6px 12px;
        font-weight: 500;
    }

    /* General text visibility */
    h1, h2, h3, h4, h5, h6 {
        color: ##212529;
    }
    p, .lead {
        color: ##495057;
    }
    .text-muted {
        color: ##6c757d !important;
    }

    /* Ensure card text is visible */
    .card-body h1,
    .card-body h2,
    .card-body h3,
    .card-body h4,
    .card-body h5,
    .card-body h6 {
        color: ##212529;
    }
    .card-body p,
    .card-body .lead {
        color: ##495057;
    }

    /* Badge overrides for better visibility */
    .badge {
        font-weight: 500;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .hero-header h1 {
            font-size: 2rem;
        }
        .chart-card-body {
            padding: 20px;
        }
    }
</style>
